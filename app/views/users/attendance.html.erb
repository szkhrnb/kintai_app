<html>
  <body>
    <h1>勤怠状況一覧</h1>
    <div class="search">
      <div class="search-year">
        <div id="pulldown">
          <select  name="year" class="pulldown-year">
            <%= (0..20).each do |year| %>
              <Option value="<%= @first_year.to_i + year %>"
                <% if @today.year == @first_year.to_i + year %>
                  selected
                <% end %>>
              <%= @first_year.to_i + year %></Option>
            <% end %>
          </select>年
          <select name="month" class="pulldown-month">
            <%= (1..12).each do |month| %>
              <Option value="<%= month %>"
                <% if @today.month == month %>
                  selected
                <% end %>>
              <%= month.to_i %></Option>
            <% end %>
          <select>月
        </div>
        <div class="search-rightend">
          <div class="inputtime">
            <input type="button" name="syukkin" value="出勤"/>
            <input type="button" name="taikin" value="退勤"/>
          </div>
          <div class="attend-save">
            <input type="button" name="attend_save" value="保存"/>
          </div>
        </div>
      </div>
      <div id="test">通ってるか確かめる用のタグ</div>
    </div>
    <div id="attendance-table" class="table">
      <table class='table table-bordered' >
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出勤時間</th>
          <th>退勤時間</th>
          <th>状況</th>
        </tr>
        <% (1..@lastday).each do |row| %>
        <tr>
          <th><%= row %></th>
          <th><%= @dateofweek[@today .change(day: row ).wday] %></th>
          <th>
            <input type="time" name="work_start" value="00:00" >
          </th>
          <th>
            <input type="time" name="work_end" min="00:00" max="29:00" value="23:59">
          </th>
          <th>
            <select name="status">
              <Option name="work"> 出勤</Option>
              <Option name="vacation"> 有休休暇</Option>
              <Option name="am_vacation"> 午前休暇</Option>
              <Option name="pm_vacation"> 午後休暇</Option>
              <Option name="holiday_work"> 休日出勤</Option>
              <Option name="absence"> 欠勤</Option>
            </select>
          </th>
        </tr>
        <% end %>
      </table>
    </div>
  </body>
</html>
