<html>
  <body>
    <div class="container">
      <div class="main">
        <div class="login-form">
          <h1>ログイン</h1>
          <%= form_with(url: "/login", local: true) do |form| %>
            <%= input_email %>
            <%= input_password %>
            <%= show_message %>
            <%= form.submit "ログイン" , class: "btn btn-default" %>
          <% end %>
        </div>
          新規登録はこちら
          <%= form_with(url:"/sessions/new", local: true) do |form| %>
            <%= form.submit "新規登録" , class: "btn btn-default" %>
          <% end %>
      </div>
    </div>
  </body>
</html>