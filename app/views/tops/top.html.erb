<html>
  <body>
    <div class="container">
      <div class="main">
        <div class="login-form">
          <h1>ログイン</h1>
          <%= form_tag("/login") do %>
            <div class="main item" style="text-align:end;">
              <p>email
              <input type="email" name="email" value="<% @email %>" >
              </p>
            </div>
            <div class="main item" style="text-align:end;">
              <p>パスワード
              <input type="password" name="password" value="<% @password %>">
              </p>
            </div>
              <% if @error_message %>
                <div class="error_message">
                  <%= @error_message %>
                </div>
              <% end %>
              <input class="btn btn-default" type="submit" value="ログイン">
          <% end %>
        </div>
        <div class="main">
          <p>新規登録はこちら</p>
          <%= form_tag("/tops/new") do %>
          <%# TODO 新規作成ボタンの配置　あと実装するかどうか %>
            <input class="btn btn-default" type="submit" value="新規登録">
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>